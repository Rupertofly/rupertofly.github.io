@import url("https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&family=Work+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap");
#socials > a::before {
    font-family: "Font Awesome 5 Brands";
}
:root {
    --red: hsla(357, 90%, 73%, 1);
}
#em::before {
    font-family: "Font Awesome 5 Free" !important;
    font-weight: 900;
    content: "\f0e0 ";
}
#tw::before {
    content: "\f099 ";
}
#li::before {
    content: "\f0e1 ";
}
#ig::before {
    content: "\f16d";
}
#ig::before {
    content: "\f16d";
}
#re::before {
    font-family: "Font Awesome 5 Free" !important;
    font-weight: 400;
    content: "\f15b ";
}
img {
    border-radius: 8px;
}
#projects {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, auto));

    gap: 16px;
    & > section {
        overflow: hidden;
    }
}
body {
    background-color: var(--red);
    font-family: "Work Sans";
    display: flex;
    flex-direction: column;
    padding: 16px;
    align-items: center;
    flex: auto;
}
article,
header {
    background-color: white;
    max-width: 900px;
    width: 100%;
    margin-bottom: 16px;

    border-radius: 8px;
    padding: 16px 16px;
    //   overflow: hidden;
}
header {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    * {
        min-width: 410px;
    }
    #services {
        margin-left: 16px;
    }
}
#bio {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, auto));
    justify-items: center;
    img {
        border-radius: 50%;
        margin: 16px 16px;
    }
    section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        max-width: 100%;
        height: auto;
        nav {
            display: flex;
            flex-direction: row;
            justify-content: center;
            flex-wrap: wrap;
            * {
                margin: 4px 8px;
            }
        }
    }
}
section > *:not(img) {
    padding-left: 16px;
}
footer {
    max-width: 900px;
    width: 100%;
}
img {
    max-width: 100%;
}
body {
    font-family: Work Sans, -apple-system, BlinkMacSystemFont, "Segoe UI",
        Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue",
        sans-serif;
    font-size: 16px;
    color: #2c3137;
}
h3,
h1,
h2 {
    font-family: Quicksand;
}
